<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.qmma.featuredetection.MenuActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instrLabel"
        android:id="@+id/instrLabelTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/textSize" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/marginTop"
        android:layout_weight="3">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cardSelectSpinner"
            android:entries="@array/cardType"
            android:background="@color/colorAccent"
            android:elevation="@dimen/elevation"
            android:layout_weight="2"
            android:layout_marginRight="@dimen/marginSides"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btnTakePicLabel"
            android:id="@+id/btnTakePic"
            android:elevation="@dimen/elevation"
            android:background="@color/colorButton"
            android:textColor="@color/colorText"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/marginSides" />
    </LinearLayout>



    <ImageButton
        android:layout_width="@dimen/roundWidth"
        android:layout_height="@dimen/roundHeight"
        android:id="@+id/mapImageButton"
        android:layout_gravity="right"
        android:src="@drawable/ic_place_24dp"
        android:tint="@android:color/white"
        android:elevation="@dimen/floatingElevation"
        android:background="@color/colorPrimary"
        android:layout_marginRight="@dimen/floatingMarginRight"
        android:layout_marginBottom="@dimen/floatingElevation" />


</LinearLayout>
